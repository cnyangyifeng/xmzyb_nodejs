page {
  margin: 0;
  background-color: #efeff4;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica, sans-serif;
  line-height: 1.6;
}

/*= .page-hd =*/

.page-hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 128rpx 0;
  background-color: #22292c;
}

.page-hd-desc {
  flex: 1;
  color: #fff;
  font-size: 20px;
  font-weight: 600;
  text-align: center;
}

/*= .page-bd =*/

.page-bd {
  padding-bottom: 80rpx;
}
