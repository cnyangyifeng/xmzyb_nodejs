/* .preview-page */

.preview-page {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  margin: 0;
  background-color: #22292c;
  line-height: normal;
}

/*= .preview-page-hd =*/

.preview-page-hd {
  flex: 1;
  display: flex;
}

.note-image-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.note-image {
  flex: 1;
  display: flex;
  width: 750rpx;
  height: 100%;
}

/*= .preview-page-ft =*/

.preview-page-ft {
  flex: none;
  display: flex;
}

/*== .toolbar ==*/

.toolbar {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 750rpx;
  background-color: #333;
}

/*=== .toolkit ===*/

.toolkit {
  flex: 1;
  display: flex;
}

/*==== .toolbar-row ====*/

.toolbar-row {
  flex: none;
  display: flex;
  width: 750rpx;
  height: 48px;
}

/*===== .toolbar-btn =====*/

.toolbar-btn {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 0 !important;
  margin-right: 0 !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  border-radius: 0;
  border-right: 1rpx solid #666;
  background-color: #333;
  color: #999;
  font-size: 16px;
  font-weight: 600;
  line-height: normal;
}

.toolbar-btn.edit {
  flex: 3;
  border-right: 1rpx solid #10aeff;
  background-color: #22292c;
  color: #fff;
}

.toolbar-btn-hover {
  background-color: #22292c;
}

.toolbar-btn::after {
  display: none;
}

.toolbar-btn-icon {
  width: 24px;
  height: 24px;
}

.toolbar-btn-label {
  margin: 0 4px;
}
