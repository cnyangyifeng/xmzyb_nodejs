/* .home-page */

.home-page {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  margin: 0;
  background-color: #22292c;
  line-height: normal;
}

/*= .home-page-hd =*/

.home-page-hd {
  flex: none;
  display: flex;
}

.note-image-container {
  flex: none;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  background-color: #fff;
}

.note-image-container.preview {
  height: 610rpx;
}

.note-image-container.edit {
  /* height: 300rpx; */
  display: none;
}

.note-image-view {
  flex: none;
  display: flex;
}

.note-image {
  flex: none;
  display: flex;
}

/*= .home-page-bd =*/

.home-page-bd {
  flex: 1;
  display: flex;
}

.note-workspace {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.env {
  flex: none;
  display: flex;
  align-items: center;
  height: 40px;
  margin: 0 20rpx;
  color: #fff;
  font-size: 14px;
  font-weight: 600;
}

.note-editor {
  flex: 1;
  display: flex;
}

.note-content {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  padding: 10px 20rpx;
  color: #fff;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 18px;
  font-weight: 600;
}

.block {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 25px;
  padding: 5px;
}

.cursor {
  width: 1rpx;
  height: 25px;
  padding: 5px 0;
  background-color: #d9d9d9;
  animation-name: flash;
  animation-duration: 2s;
  animation-fill-mode: both;
  animation-iteration-count: infinite;
}

@keyframes flash {
  from, 50%, to {
    opacity: 1;
  }

  25%, 75% {
    opacity: 0.4;
  }
}

