/*= .home-page-ft =*/

.home-page-ft {
  flex: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 750rpx;
}

/*== .toolbar-hd ==*/

.toolbar-hd {
  flex: none;
  display: flex;
  width: 750rpx;
  height: 44px;
}

.toolbar-switch {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  box-sizing: border-box;
  border-right: 1rpx solid #666;
  background-color: #333;
}

.toolbar-switch-icon {
  width: 32px;
  height: 32px;
}

.toolbar-prefix {
  flex: none;
  display: inline-block;
  width: 120rpx;
  box-sizing: border-box;
  border-right: 2px solid #666;
  background-color: #333;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  line-height: 44px;
}

.toolbar-prefix.active {
  color: #09bb07;
}

.toolbar-prefix-hover {
  background-color: #22292c;
}

.toolbar-tabs {
  flex: none;
  display: flex;
  width: 540rpx;
  background-color: #333;
}

.toolbar-tabs-innner {
  flex: 1;
  display: flex;
  width: 540rpx;
  white-space: nowrap;
}

.toolbar-tab {
  flex: none;
  display: inline-block;
  padding: 0 16px;
  /* box-sizing: border-box; *//* border-right: 1rpx solid #666; */
  background-color: #333;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  text-align: center;
  line-height: 44px;
}

.toolbar-tab.active {
  color: #09bb07;
}

.toolbar-tab.contact {
  color: #ffbe00 !important;
}

.toolbar-tab:last-of-type {
  border-right: none;
}

.toolbar-tab-hover {
  background-color: #22292c;
}

/*== .toolbar-bd ==*/

.toolbar-bd {
  flex: 1;
  display: flex;
  width: 750rpx;
  background-color: #efeff4;
}

.toolbar-bd.preview {
  display: none;
}

.toolbar-bd.edit {
  height: 220px;
}

.toolbar-container {
  flex: none;
  display: flex;
  flex-direction: column;
  width: 750rpx;
  background-color: #efeff4;
}

.toolbar-container.preview {
  height: 0;
}

.toolbar-container.edit {
  height: 220px;
}

.toolbar-row {
  flex: none;
  display: flex;
  width: 750rpx;
  height: 44px;
}

.toolbar-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #efeff4;
  color: #000;
  font-size: 16px;
  font-weight: 600;
}

.toolbar-btn.one {
  flex: 1;
}

.toolbar-btn.two {
  flex: 2;
}

.toolbar-btn.three {
  flex: 3;
}

.toolbar-btn-hover {
  background-color: #fff;
}

.toolbar-btn-icon {
  width: 32px;
  height: 32px;
}

.control-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #22292c;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
}

.control-btn.two {
  flex: 2;
}

.control-btn.three {
  flex: 3;
}

.control-btn.on {
  color: #09bb07;
}

.command-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #22292c;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
}

.command-btn.two {
  flex: 2;
}

.command-btn.three {
  flex: 3;
}

.command-btn-hover {
  background-color: #999;
}

.navigator-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 0 !important;
  margin-right: 0 !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  box-sizing: border-box;
  border-radius: 0;
  background-color: #333;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  line-height: normal;
}

.navigator-btn.two {
  flex: 2;
}

.navigator-btn.three {
  flex: 3;
}

.navigator-btn-hover {
  background-color: #999;
}

/*== .actionbar ==*/

.actionbar {
  flex: none;
  display: flex;
  width: 750rpx;
  height: 48px;
}

.actionbar-btn {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 0 !important;
  margin-right: 0 !important;
  padding-left: 0 !important;
  padding-right: 0 !important;
  box-sizing: border-box;
  border-radius: 0;
  color: #fff;
  font-size: 16px;
  font-weight: 600;
  line-height: normal;
}

.actionbar-btn.save {
  flex: none;
  width: 210rpx;
  border-right: 1rpx solid #ffbe00;
  background-color: #ffbe00;
}

.actionbar-btn.save-disabled {
  flex: none;
  width: 210rpx;
  border-right: 1rpx solid rgba(255, 190, 0, 0.4);
  background-color: rgba(255, 190, 0, 0.4);
}

.actionbar-btn.save-hover {
  border-right: 1rpx solid rgba(255, 190, 0, 0.8);
  background-color: rgba(255, 190, 0, 0.8);
}

.actionbar-btn.send {
  border-right: 1rpx solid #f76260;
  background-color: #f76260;
}

.actionbar-btn.send-disabled {
  border-right: 1rpx solid rgba(247, 98, 96, 0.4);
  background-color: rgba(247, 98, 96, 0.4);
}

.actionbar-btn.refresh {
  flex: 3;
  border-right: 1rpx solid #10aeff;
  background-color: #10aeff;
}

.actionbar-btn.refresh-disabled {
  flex: 3;
  border-right: 1rpx solid rgba(16, 174, 255, 0.4);
  background-color: rgba(16, 174, 255, 0.4);
}

.actionbar-btn.refresh-hover {
  flex: 3;
  border-right: 1rpx solid rgba(16, 174, 255, 0.8);
  background-color: rgba(16, 174, 255, 0.8);
}

.actionbar-btn.delete {
  flex: 2;
  border-right: 1rpx solid #09bb07;
  background-color: #09bb07;
}

.actionbar-btn.delete.preview {
  display: none;
}

.actionbar-btn.delete-hover {
  flex: 2;
  border-right: 1rpx solid rgba(9, 187, 7, 0.8);
  background-color: rgba(9, 187, 7, 0.8);
}

.actionbar-btn::after {
  display: none;
}

.actionbar-btn-icon {
  width: 32px;
  height: 32px;
}
